{% assign timestamp = "now" | date: "%s" %}
<link rel="preload" href="{{ '/dist/index.min.css' | absolute_url | append: '?' | append: timestamp }}" as="style">
<link rel="preload" href="{{ '/dist/index.min.js' | absolute_url | append: '?' | append: timestamp }}" as="script">
<link rel="stylesheet" type="text/css" href="{{ '/dist/index.min.css' | absolute_url | append: '?' | append: timestamp }}">

{% if site.analytics -%}
<script async src="https://www.googletagmanager.com/gtag/js?id={{ site.analytics }}"></script>
<script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){ dataLayer.push(arguments); }
    gtag('js', new Date());
    gtag('config', '{{ site.analytics }}');
</script>
{%- endif %}
<script defer src="{{ '/dist/index.min.js' | absolute_url | append: '?' | append: timestamp }}"></script>
