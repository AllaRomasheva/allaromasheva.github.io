{%- assign summary = post.description | defalts: post.excerpt | defaults: post.description | strip_html | truncate: 180, " ... " -%}
{%- assign url = post.url | absolute_url -%}
<article class="app-entry app-entry-archive">
    <div class="app-entry__content">
        <h3 class="app-entry__title">{{ post.title }}</h3>
        <time class="app-entry__date">{% include dateformat value=post.date %}</time>
        <p class="app-entry__summary">{{ summary }}</p>
    </div>
    <a class="app-entry__link" aria-label="{{ post.title }}" href="{{ url }}"></a>
</article>
